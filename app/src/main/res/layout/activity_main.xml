<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity" android:orientation="vertical" android:background="@color/black_pr">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/sad">
        <com.google.android.gms.ads.AdView
                app:adSize="SMART_BANNER"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mainAdView"
                app:adUnitId="ca-app-pub-3940256099942544/6300978111"
                android:visibility="visible" app:layout_collapseMode="parallax"/>
        <fragment
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:navGraph="@navigation/main_nav_comp"
                app:defaultNavHost="true"
                android:id="@+id/host_fragment"
                app:layout_scrollFlags="scroll|enterAlways"
                android:fillViewport="true"/>
    </LinearLayout>
    <!--<FrameLayout
            android:id="@+id/main_frame_lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_weight="0"
            android:isScrollContainer="true"
            android:nestedScrollingEnabled="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


    </FrameLayout> -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchor="@id/bar" app:backgroundTint="@color/gray_dk"
            app:layout_behavior="@string/fab_transformation_scrim_behavior" app:layout_anchorGravity="bottom"/>
    <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigationIcon="@mipmap/ic_launcher_round" app:fabCradleMargin="3dp"
            app:fabCradleRoundedCornerRadius="20dp"
            app:fabAlignmentMode="center"
            app:buttonGravity="top|bottom"

            style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
            app:layout_anchor="@id/sad" app:layout_anchorGravity="bottom"
    />

</androidx.coordinatorlayout.widget.CoordinatorLayout>