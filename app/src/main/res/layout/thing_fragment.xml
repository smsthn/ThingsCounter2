<?xml version="1.0" encoding="utf-8"?>


<androidx.coordinatorlayout.widget.CoordinatorLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:background="@android:color/white" android:id="@+id/thing_coordinator_layout">
	<com.google.android.material.appbar.AppBarLayout
			android:theme="@style/AppTheme.AppBarOverlay" android:layout_width="match_parent"
			android:layout_height="match_parent">

		<com.google.android.material.appbar.CollapsingToolbarLayout
				android:id="@+id/main.collapsing"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:fitsSystemWindows="true"
				android:isScrollContainer="true"
				app:contentScrim="?attr/colorPrimary"
				app:expandedTitleMarginEnd="64dp"
				app:expandedTitleMarginStart="48dp"
				app:layout_scrollFlags="scroll|exitUntilCollapsed">

			<LinearLayout
					android:orientation="vertical"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					app:layout_collapseMode="parallax" app:layout_collapseParallaxMultiplier="0.8">
				<androidx.appcompat.widget.Toolbar
						android:id="@+id/toolbar2"
						android:layout_width="match_parent"
						app:popupTheme="@style/AppTheme.AppBarOverlay"
						app:layout_collapseMode="pin"
						android:layout_weight="0" android:layout_height="0dp"/>
				<LinearLayout
						app:layout_collapseMode="parallax"
						android:orientation="vertical"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

					<FrameLayout
							app:layout_collapseMode="parallax"
							android:layout_width="match_parent"
							android:layout_height="match_parent" android:layout_weight="1"
							android:id="@+id/ProgFrameLay2">

						<ProgressBar
								style="@style/MsProg"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:id="@+id/ProgBar2" android:progress="20"
								android:progressDrawable="@android:drawable/progress_horizontal"
								android:progressTint="@color/green_lt1"
								android:progressBackgroundTint="@color/green_dk"
								android:max="100"/>
						<TextView
								android:text="...."
								android:layout_width="match_parent"
								android:layout_height="match_parent" android:id="@+id/Prog2SumTxt"
								android:textColor="@android:color/black" android:textAlignment="center"/>
					</FrameLayout>
					<FrameLayout
							app:layout_collapseMode="parallax"
							app:layout_collapseParallaxMultiplier="0.9"
							android:layout_width="match_parent"
							android:layout_height="wrap_content" android:layout_weight="0"
							tools:layout_editor_absoluteY="77dp"
							tools:layout_editor_absoluteX="2dp" android:id="@+id/MainCtgFrameLay"
							android:layout_gravity="center">

						<com.smsthn.thingscounter.CustomViews.Spinners.CustomCtgSpinner
								android:layout_width="match_parent"
								android:layout_height="match_parent" android:id="@+id/MainCatagoriesSpinner"
								android:backgroundTint="@android:color/black"
								style="@style/Widget.AppCompat.Spinner"/>
						<TextView
								android:text="@string/catagory_doublepoint"
								android:layout_width="wrap_content"
								android:layout_height="match_parent" android:id="@+id/textView17"
								android:textColor="@android:color/white"
								android:background="@android:color/black" android:paddingStart="10dp"
								android:paddingEnd="10dp"/>
						<TextView
								android:text="All"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content" android:id="@+id/MainCtgTxt"
								android:textColor="@android:color/black" android:layout_gravity="center"
								android:visibility="invisible"/>
					</FrameLayout>
					<FrameLayout
							app:layout_collapseMode="parallax"
							android:layout_width="match_parent"
							android:layout_height="match_parent" android:layout_weight="1"
							android:id="@+id/ProgFrameLay1">

						<ProgressBar
								style="@style/Widget.AppCompat.ProgressBar.Horizontal"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:id="@+id/ProgBar1" android:max="100"
								android:progressDrawable="@android:drawable/progress_horizontal"
								android:progress="20"
								android:progressTint="@color/red_lt2"
								android:progressBackgroundTint="@color/red_dk"/>
						<TextView
								android:text="...."
								android:layout_width="match_parent"
								android:layout_height="match_parent" android:id="@+id/Prog1SumTxt"
								android:textColor="@android:color/black" android:textAlignment="center"/>
					</FrameLayout>
					<LinearLayout
							app:layout_collapseMode="parallax"
							android:orientation="vertical"
							android:layout_width="match_parent"
							android:layout_height="match_parent" android:layout_weight="1">
						<FrameLayout
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								tools:layout_editor_absoluteY="77dp"
								tools:layout_editor_absoluteX="2dp" android:id="@+id/TypeLayNotPosNegNeu"
								android:layout_gravity="center">

							<com.smsthn.thingscounter.CustomViews.Spinners.CustomTypeSpinner
									android:layout_width="match_parent"
									android:layout_height="match_parent" android:id="@+id/MainTypeSpinner"
									android:backgroundTint="@android:color/black"
									style="@style/Widget.AppCompat.Spinner"
									android:layout_marginBottom="3dp" android:layout_marginTop="3dp"
									android:foreground="@android:color/white"/>
							<TextView
									android:text="@string/color_doublepoint"
									android:layout_width="wrap_content"
									android:layout_height="match_parent"
									android:textColor="@android:color/white"
									android:background="@android:color/black" android:paddingStart="10dp"
									android:paddingEnd="10dp" android:id="@+id/TypeSpinnerTitleTxt"/>
							<TextView
									android:text="All"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content" android:id="@+id/MainTypeTxt"
									android:textColor="@android:color/black" android:layout_gravity="center"
									android:visibility="invisible"/>
						</FrameLayout>
						<RadioGroup
								android:layout_width="match_parent"
								android:layout_height="wrap_content" android:orientation="horizontal"
								android:checkedButton="@+id/HomeTypeAllBtn" android:id="@+id/HomeTypeRadioGroup">
							<RadioButton
									android:text="@string/all"
									android:layout_width="match_parent"
									android:layout_height="wrap_content" android:id="@+id/HomeTypeAllBtn"
									android:layout_weight="1"
									android:background="@android:color/white"
									android:textColor="@android:color/black"
							/>
							<RadioButton
									android:text="@string/positive"
									android:layout_width="match_parent"
									android:layout_height="wrap_content" android:id="@+id/HomeTypePosBtn"
									android:layout_weight="1"
									android:background="@color/green_pr"
									android:textColor="@android:color/black"
							/>
							<RadioButton
									android:text="@string/negative"
									android:layout_width="match_parent"
									android:layout_height="wrap_content" android:id="@+id/HomeTypeNegBtn"
									android:layout_weight="1"
									android:background="@color/red_lt1"
									android:textColor="@android:color/black"
							/>
							<RadioButton
									android:text="@string/neutral"
									android:layout_width="match_parent"
									android:layout_height="wrap_content" android:id="@+id/HomeTypeNeuBtn"
									android:layout_weight="1"
									android:background="@color/gray_lt1"
									android:textColor="@android:color/black"
									android:paddingRight="2dp" android:paddingLeft="2dp"/>
						</RadioGroup>
					</LinearLayout>
					<FrameLayout
							app:layout_collapseMode="parallax"
							android:layout_width="match_parent"
							android:layout_height="match_parent" android:layout_weight="1"
							android:id="@+id/ProgFrameLay3">

						<ProgressBar
								style="@style/Widget.AppCompat.ProgressBar.Horizontal"
								android:layout_width="match_parent"
								android:layout_height="match_parent"
								android:id="@+id/ProgBar3" android:max="100"
								android:progressDrawable="@android:drawable/progress_horizontal"
								android:progress="20"
								android:progressTint="@android:color/white"
								android:progressBackgroundTint="@color/gray_dk"/>
						<TextView
								android:text="...."
								android:layout_width="match_parent"
								android:layout_height="match_parent" android:id="@+id/Prog3SumTxt"
								android:textColor="@android:color/black" android:textAlignment="center"/>
					</FrameLayout>


				</LinearLayout>
			</LinearLayout>


		</com.google.android.material.appbar.CollapsingToolbarLayout>
	</com.google.android.material.appbar.AppBarLayout>
	<ScrollView
			android:layout_width="match_parent"
			android:layout_height="match_parent" app:layout_behavior="@string/appbar_scrolling_view_behavior">
		<LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
					  android:orientation="vertical" android:id="@+id/sssss">
			<androidx.recyclerview.widget.RecyclerView
					app:layout_behavior="@string/appbar_scrolling_view_behavior"
					android:layout_width="match_parent"
					android:layout_height="match_parent" android:id="@+id/AllThingsRecycleView"
					android:visibility="visible" app:layout_scrollFlags="scroll|exitUntilCollapsed"/>
		</LinearLayout>
	</ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
