<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:baselineAligned="false">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1" android:background="@color/gray_lt1">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/OngoingNotificationNeutralSum"
                android:textAlignment="center"
                android:textColor="@android:color/white"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1" android:background="@color/green_pr"
    >
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/OngoingNotificationPositiveSum"
                android:textAlignment="center"
                android:textColor="@android:color/white" android:visibility="visible"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1" android:background="@color/red_pr">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/OngoingNotificationNegativeSum"
                android:textAlignment="center"
                android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>